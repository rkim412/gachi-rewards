# Shopify App Credentials
# Get from: https://partners.shopify.com → Your App → App setup → API credentials
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here

# App URL (Production - Vercel)
# Update with your actual Vercel URL after deployment
SHOPIFY_APP_URL=https://gachi-rewards.vercel.app

# Scopes (permissions)
SCOPES=write_products,read_customers,write_customers,read_orders,write_discounts,read_discounts,write_app_proxy

# Database - Neon PostgreSQL
# Pooled connection (used by Prisma Client - your app)
# Get from: Neon Dashboard → Connection Details → Pooled connection
DATABASE_URL=postgresql://neondb_owner:password@ep-xxx-pooler.region.aws.neon.tech/neondb?connect_timeout=15&sslmode=require

# Direct connection (used by Prisma CLI - migrations, generate, etc.)
# Get from: Neon Dashboard → Connection Details → Direct connection
# Note: This is optional but recommended for faster CLI operations
DIRECT_URL=postgresql://neondb_owner:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require

# Local development (SQLite - optional)
# DATABASE_URL="file:./prisma/dev.sqlite"

# Webhook Secret (Optional but Recommended)
# Get from: https://partners.shopify.com → Your App → App setup → Webhooks → Webhook signing secret
WEBHOOK_SECRET=your_webhook_secret_here

# Node Environment
NODE_ENV=production
